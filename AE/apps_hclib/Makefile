include $(HCLIB_ROOT)/include/hclib.mak
include $(CUTTLEFISH_ROOT)/include/cuttlefish.mak

TARGETS=heat sor heatIR sorIR heatRR sorRR

all: clean $(TARGETS) clean-obj

sorRR:
	clang++ -DREGULAR -I./inc/. $(CUTTLEFISH_CXXFLAGS) $(PROJECT_CXXFLAGS) $(CUTTLEFISH_LDFLAGS) $(PROJECT_LDFLAGS) -o sorRR sor.cpp $(CUTTLEFISH_LDLIBS) $(PROJECT_LDLIBS)

heatRR:
	clang++ -DREGULAR -I./inc/. $(CUTTLEFISH_CXXFLAGS) $(PROJECT_CXXFLAGS) $(CUTTLEFISH_LDFLAGS) $(PROJECT_LDFLAGS) -o heatRR heat.cpp $(CUTTLEFISH_LDLIBS) $(PROJECT_LDLIBS)

sorIR:
	clang++ -DIRREGULAR -I./inc/. $(CUTTLEFISH_CXXFLAGS) $(PROJECT_CXXFLAGS) $(CUTTLEFISH_LDFLAGS) $(PROJECT_LDFLAGS) -o sorIR sor.cpp $(CUTTLEFISH_LDLIBS) $(PROJECT_LDLIBS)

heatIR:
	clang++ -DIRREGULAR -I./inc/. $(CUTTLEFISH_CXXFLAGS) $(PROJECT_CXXFLAGS) $(CUTTLEFISH_LDFLAGS) $(PROJECT_LDFLAGS) -o heatIR heat.cpp $(CUTTLEFISH_LDLIBS) $(PROJECT_LDLIBS)

sor:
	clang++ -I./inc/. $(CUTTLEFISH_CXXFLAGS) $(PROJECT_CXXFLAGS) $(CUTTLEFISH_LDFLAGS) $(PROJECT_LDFLAGS) -o sor sor.cpp $(CUTTLEFISH_LDLIBS) $(PROJECT_LDLIBS)

heat:
	clang++ -I./inc/. $(CUTTLEFISH_CXXFLAGS) $(PROJECT_CXXFLAGS) $(CUTTLEFISH_LDFLAGS) $(PROJECT_LDFLAGS) -o heat heat.cpp $(CUTTLEFISH_LDLIBS) $(PROJECT_LDLIBS)

clean-obj:
	rm -rf *.o

clean:
	rm -rf *.o $(TARGETS)
